<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hp.dao.LiuYanDao">
   
	<!-- 全查  -->
	<select id="selectAll" resultType="com.hp.entity.LiuYan">
		select * from liuyan
	</select>
	
	<!-- 添加 -->
	<insert id="insert">
	   insert into liuyan(timu,zuozhe,content) values(#{timu},#{zuozhe},#{content})
	</insert>
	
</mapper>